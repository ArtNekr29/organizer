<Window x:Class="organizer.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:organizer"
        mc:Ignorable="d"
        Title="Registration" Height="250" Width="500" Background="Lavender">
    <Grid>
        <StackPanel>
            <Menu Height="20" VerticalAlignment="Top" Background="White">
                <MenuItem Name="logmenu" Header="Авторизация" Click="MenuItem_Click"/>
                <MenuItem Name="regmenu" Header="Регистрация" Click="MenuItem_Click_1" Background="LightGray"/>
            </Menu>
            <Frame Name="mainframe" NavigationUIVisibility = 'Hidden'/>

        </StackPanel>
    </Grid>
</Window>
